<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.airlinereservationsystem.PaymentController"
      spacing="15"
      stylesheets="@StyleFlight.css">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="Payment Details" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Label fx:id="flightInfoLabel" text="Flight Details Will Appear Here"/>
    <Label fx:id="priceLabel" text="Total Price: $0.00" style="-fx-font-weight: bold;"/>

    <Separator/>

    <GridPane hgap="10" vgap="15">
        <Label text="Cardholder Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="cardName" promptText="Enter name on card" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Card Number:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="cardNumber" promptText="1234 5678 9012 3456" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <TextField fx:id="cardExpiry" promptText="MM/YY" maxWidth="100"/>
            <TextField fx:id="cardCVV" promptText="CVV" maxWidth="80"/>
        </HBox>

        <Label text="Billing Address:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="billingAddress" promptText="Enter your billing address" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    </GridPane>

    <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-padding: 20 0 0 0;">
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" />
        <Button fx:id="payButton" text="Pay Now" onAction="#handlePayNow" style="-fx-background-color: #228B22;"/>
    </HBox>
</VBox>