<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="429.0" prefWidth="401.0" spacing="10"
      xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/23.0.1"
      fx:controller="com.example.airlinereservationsystem.SignupController"
      stylesheets="@StyleSignUp.css">
    <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

    <Label text="Create a New Account" />
    <TextField fx:id="usernameField" promptText="Username" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" />
    <Button onAction="#handleSignup" text="Signup" />
    <Hyperlink onAction="#switchToLogin" prefHeight="23.0" prefWidth="80.0" text="Back to Login" />
    <Label fx:id="messageLabel" textFill="red" />
</VBox>
