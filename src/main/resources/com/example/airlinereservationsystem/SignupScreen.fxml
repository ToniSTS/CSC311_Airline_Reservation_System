<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.airlinereservationsystem.SignupController">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="Create a New Account"/>
    <TextField fx:id="usernameField" promptText="Username"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password"/>
    <Button text="Signup" onAction="#handleSignup"/>
    <Hyperlink text="Back to Login" onAction="#switchToLogin"/>
    <Label fx:id="messageLabel" textFill="red"/>
</VBox>