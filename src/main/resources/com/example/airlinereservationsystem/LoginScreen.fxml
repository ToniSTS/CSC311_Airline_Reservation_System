<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.airlinereservationsystem.LoginController">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="Login to Airline Reservation"/>
    <TextField fx:id="usernameField" promptText="Username"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <Button text="Login" onAction="#handleLogin"/>
    <Hyperlink text="Create an account" onAction="#switchToSignup"/>
    <Label fx:id="messageLabel" textFill="red"/>
</VBox>