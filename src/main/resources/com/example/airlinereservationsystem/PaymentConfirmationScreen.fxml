<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.airlinereservationsystem.PaymentConfirmationController"
      spacing="20"
      stylesheets="@StyleFlight.css"
      alignment="CENTER">
    <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button fx:id="backToAdminButton" text="Back to Admin Menu" onAction="#handleBackToAdmin"
                style="-fx-background-color: #8A2BE2;"/>
    </HBox>

    <Text text="Payment Confirmed!" fill="white" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <VBox alignment="CENTER" spacing="15" style="-fx-background-color: #333333; -fx-padding: 20; -fx-background-radius: 10;">
        <Label text="Thank you for your purchase!" style="-fx-font-size: 16px;"/>
        <Label fx:id="bookingReferenceLabel" text="Booking Reference: ABC123" style="-fx-font-size: 14px;"/>
        <Label fx:id="flightDetailsLabel" style="-fx-font-size: 14px;" wrapText="true"/>
        <Label fx:id="passengerLabel" style="-fx-font-size: 14px;"/>
        <Label fx:id="totalAmountLabel" style="-fx-font-size: 18px; -fx-text-fill: #7FFF00;"/>
    </VBox>

    <Label text="A confirmation email has been sent to your registered email address." wrapText="true" textAlignment="CENTER"/>

    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="viewBookingsButton" text="View My Bookings" onAction="#handleViewBookings"/>
        <Button fx:id="returnButton" text="Return to Flight Search" onAction="#handleReturn"/>
    </HBox>
</VBox>