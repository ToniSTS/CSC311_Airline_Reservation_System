<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.airlinereservationsystem.AdminNavigationController"
      spacing="20"
      stylesheets="@StyleFlight.css"
      alignment="CENTER">
    <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>

    <Label fx:id="welcomeLabel"
           text="Welcome, Admin! Select a screen to navigate to:"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <VBox spacing="15" style="-fx-background-color: #333333; -fx-padding: 20; -fx-background-radius: 10;"
          alignment="CENTER" maxWidth="400">

        <Label text="Admin Navigation Menu" style="-fx-font-size: 16px; -fx-text-fill: #8A2BE2;"/>

        <Button fx:id="flightBookingButton"
                text="Flight Booking System"
                onAction="#handleFlightBooking"
                style="-fx-min-width: 250; -fx-background-color: #8A2BE2;"/>

        <Button fx:id="userManagementButton"
                text="User Management"
                onAction="#handleUserManagement"
                style="-fx-min-width: 250; -fx-background-color: #8A2BE2;"/>

        <Button fx:id="paymentHistoryButton"
                text="Payment History"
                onAction="#handlePaymentHistory"
                style="-fx-min-width: 250; -fx-background-color: #8A2BE2;"/>

        <Separator style="-fx-background-color: #444444;"/>

        <Button fx:id="signOutButton"
                text="Sign Out"
                onAction="#handleSignOut"
                style="-fx-min-width: 250; -fx-background-color: #B22222;"/>
    </VBox>

    <Label text="Admin access grants you full control of the system."
           style="-fx-font-style: italic; -fx-text-fill: #999999;"/>
</VBox>